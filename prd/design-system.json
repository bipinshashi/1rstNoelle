{
  "metadata": {
    "name": "Professional Services Design System",
    "version": "1.0.0",
    "description": "A modern, professional design system for service-based businesses with emphasis on trust, expertise, and quality",
    "created": "2025-06-27"
  },
  "colors": {
    "primary": {
      "dark": "#1a1a1a",
      "medium": "#2d2d2d",
      "light": "#404040"
    },
    "secondary": {
      "warm": "#8b7355",
      "neutral": "#6b6b6b",
      "light": "#a8a8a8"
    },
    "background": {
      "dark": "#0f0f0f",
      "medium": "#1a1a1a",
      "light": "#2d2d2d",
      "overlay": "rgba(0, 0, 0, 0.8)"
    },
    "text": {
      "primary": "#ffffff",
      "secondary": "#cccccc",
      "muted": "#999999",
      "accent": "#d4c4b0"
    },
    "accent": {
      "gold": "#d4c4b0",
      "green": "#4a9b8e"
    }
  },
  "typography": {
    "fontFamilies": {
      "primary": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
      "secondary": "Georgia, 'Times New Roman', serif"
    },
    "fontSizes": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem"
    },
    "fontWeights": {
      "light": 300,
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "lineHeights": {
      "tight": 1.25,
      "normal": 1.5,
      "relaxed": 1.75
    },
    "hierarchy": {
      "hero": {
        "fontSize": "3rem",
        "fontWeight": 700,
        "lineHeight": 1.2,
        "color": "#ffffff"
      },
      "h1": {
        "fontSize": "2.25rem",
        "fontWeight": 600,
        "lineHeight": 1.25,
        "color": "#ffffff"
      },
      "h2": {
        "fontSize": "1.875rem",
        "fontWeight": 600,
        "lineHeight": 1.3,
        "color": "#ffffff"
      },
      "h3": {
        "fontSize": "1.5rem",
        "fontWeight": 500,
        "lineHeight": 1.4,
        "color": "#ffffff"
      },
      "body": {
        "fontSize": "1rem",
        "fontWeight": 400,
        "lineHeight": 1.6,
        "color": "#cccccc"
      },
      "caption": {
        "fontSize": "0.875rem",
        "fontWeight": 400,
        "lineHeight": 1.5,
        "color": "#999999"
      }
    }
  },
  "spacing": {
    "scale": {
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem",
      "xl": "2rem",
      "2xl": "3rem",
      "3xl": "4rem",
      "4xl": "6rem",
      "5xl": "8rem"
    },
    "component": {
      "padding": {
        "xs": "0.5rem",
        "sm": "0.75rem",
        "md": "1rem",
        "lg": "1.5rem",
        "xl": "2rem"
      },
      "margin": {
        "xs": "0.5rem",
        "sm": "1rem",
        "md": "1.5rem",
        "lg": "2rem",
        "xl": "3rem"
      }
    }
  },
  "layout": {
    "grid": {
      "columns": 12,
      "gutters": "1.5rem",
      "maxWidth": "1200px",
      "breakpoints": {
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px"
      }
    },
    "containers": {
      "section": {
        "padding": "4rem 2rem",
        "maxWidth": "1200px",
        "margin": "0 auto"
      },
      "card": {
        "padding": "2rem",
        "borderRadius": "0.5rem",
        "background": "#1a1a1a"
      }
    }
  },
  "components": {
    "featureCard": {
      "background": "#1a1a1a",
      "border": "1px solid #2d2d2d",
      "borderRadius": "0.5rem",
      "padding": "2rem",
      "textAlign": "center",
      "transition": "all 0.3s ease",
      "hover": {
        "transform": "translateY(-4px)",
        "borderColor": "#404040"
      }
    },
    "icon": {
      "size": {
        "sm": "1.5rem",
        "md": "2rem",
        "lg": "3rem",
        "xl": "4rem"
      },
      "color": "#d4c4b0",
      "strokeWidth": "1.5px"
    },
    "button": {
      "primary": {
        "background": "#d4c4b0",
        "color": "#1a1a1a",
        "padding": "0.75rem 1.5rem",
        "borderRadius": "0.375rem",
        "fontWeight": 600,
        "fontSize": "0.875rem",
        "transition": "all 0.2s ease",
        "hover": {
          "background": "#c4b4a0",
          "transform": "translateY(-1px)"
        }
      },
      "secondary": {
        "background": "transparent",
        "color": "#ffffff",
        "border": "1px solid #404040",
        "padding": "0.75rem 1.5rem",
        "borderRadius": "0.375rem",
        "fontWeight": 500,
        "fontSize": "0.875rem",
        "transition": "all 0.2s ease",
        "hover": {
          "borderColor": "#d4c4b0",
          "color": "#d4c4b0"
        }
      }
    },
    "socialLinks": {
      "size": "1.5rem",
      "color": "#999999",
      "spacing": "1rem",
      "hover": {
        "color": "#d4c4b0"
      }
    },
    "navigation": {
      "background": "#0f0f0f",
      "padding": "1rem 2rem",
      "borderBottom": "1px solid #2d2d2d"
    }
  },
  "effects": {
    "shadows": {
      "sm": "0 1px 2px rgba(0, 0, 0, 0.05)",
      "md": "0 4px 6px rgba(0, 0, 0, 0.1)",
      "lg": "0 10px 15px rgba(0, 0, 0, 0.1)",
      "xl": "0 20px 25px rgba(0, 0, 0, 0.1)"
    },
    "transitions": {
      "fast": "0.15s ease",
      "medium": "0.3s ease",
      "slow": "0.5s ease"
    },
    "borderRadius": {
      "sm": "0.25rem",
      "md": "0.375rem",
      "lg": "0.5rem",
      "xl": "0.75rem",
      "full": "9999px"
    }
  },
  "patterns": {
    "twoColumnLayout": {
      "description": "Split content layout with text on left, image on right",
      "structure": {
        "container": {
          "display": "grid",
          "gridTemplateColumns": "1fr 1fr",
          "gap": "3rem",
          "alignItems": "center"
        },
        "content": {
          "paddingRight": "2rem"
        },
        "media": {
          "borderRadius": "0.5rem",
          "overflow": "hidden"
        }
      }
    },
    "featureGrid": {
      "description": "Grid of feature cards with icons and descriptions",
      "structure": {
        "container": {
          "display": "grid",
          "gridTemplateColumns": "repeat(auto-fit, minmax(250px, 1fr))",
          "gap": "1.5rem",
          "marginBottom": "3rem"
        }
      }
    },
    "heroSection": {
      "description": "Full-width hero with background image and overlay",
      "structure": {
        "background": "linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6))",
        "minHeight": "60vh",
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "center",
        "textAlign": "center"
      }
    }
  }
}